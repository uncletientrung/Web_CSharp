@model IEnumerable<Web_CSharp.ViewModels.MenuLoaiVM>

<div class="col-lg-12">
    <div class="mb-3">
        <h4>Danh mục </h4>
        <ul class="list-unstyled fruite-categorie"> 
            @foreach(var item in Model)
            {
                <li>
                    <div class="d-flex justify-content-between fruite-name">
                        <a asp-controller="HangHoa" asp-action="Index" 
                                asp-route-loai="@item.MaLoai">
                            <i class="fas fa-apple-alt me-2"></i>@item.TenLoai
                        </a>  @* Mục đích để mỗi lần nhấn vào sản phẩm ở danh mục sẽ hiện mã
                                                loại ở trên đường dẫn*@
            

                        <span>(@item.SoLuong)</span>
                    </div>
                </li>
            }
                
            
        </ul>
    </div>
</div>